<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".WatchTopics.ActivityWatchTopics">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_board"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="200dp">

            <ImageButton
                android:id="@+id/ibHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/ic_home_white_24dp" />

            <com.github.abdularis.civ.AvatarImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:id="@+id/imv_avatar"
                android:src="@drawable/avatar"
                app:strokeColor="@color/white"
                app:view_state="IMAGE"
                app:strokeWidth="1dp"
                android:padding="10dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/permanent_marker"
                    android:textSize="38dp"
                    android:textColor="@color/scoreColor"
                    android:id="@+id/tv_score"
                    />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/crown"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_levelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 1"
                android:fontFamily="@font/permanent_marker"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:padding="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|left">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/level1"
                android:id="@+id/img_level"
                android:layout_marginLeft="20dp"/>

            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="50dp"
                android:paddingTop="20dp"
                android:progress="25"/>
        </LinearLayout>

    </FrameLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gv_listTopic"
        android:numColumns="auto_fit">
    </GridView>

</LinearLayout>